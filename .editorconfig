root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 175
ij_html_space_inside_empty_tag = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true
